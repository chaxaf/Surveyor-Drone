<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#C70039" /> <!-- Pale green when pressed -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#F2E34C" /> <!-- Pale green when focused -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFBF00" /> <!-- Default pale green -->
        </shape>
    </item>
</selector>