<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment
            android:id="@+id/mainFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            android:layout_weight="11"
            app:navGraph="@navigation/navigation" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomMenuView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:menu="@menu/bottom_menu"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:itemTextColor="@color/bottom_navigation_text_color_non_selected"
            app:itemIconTint="@color/bottom_navigation_text_color_selected"
            app:itemRippleColor="@color/bottom_navigation_ripple"
            android:visibility="visible"
            android:layout_weight="1"
            android:foregroundGravity="bottom"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>